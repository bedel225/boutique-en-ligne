{% extends 'base.html.twig' %}

{% block body %}

    <div class="container my-5">
        <h1>Espace personnel</h1>
        <div class="row">
            <div class="col-md-3">
                {% include 'account/menu.html.twig' %}
            </div>
            <div class="col-md-9">
                <div class="d-flex justify-content-between">
                    <h5>Mes adresses</h5>
                    <a href="{{ path('app_account_address_form') }}" >Ajouter une adresse</a>
                </div>

                {% for address in app.user.addresses %}
                    <br>{{  address.firstname }} {{  address.lastname }}
                    <br>{{  address.address }} {{  address.postal }}
                    <br>{{  address.city}}  {{  address.country }}<br>
                    <a href="{{ path('app_account_address_form', {id : address.id}) }}" class="small text-secondary">Editer</a>
                {% endfor %}
            </div>
        </div>

    </div>
{% endblock %}