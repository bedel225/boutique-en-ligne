{% extends 'base.html.twig' %}

{% block body %}

    <div class="container my-5">
        <h1>Mon panier</h1>
        <div class="row">
            <div class="col-md-8">
               <h3>Liste de mes produits</h3>
                {%for product in cart %}
                <div class="row mb-3">
                    <div class="col-md-4">
                        <img src="/uploads/{{ product.object.illustration }}" class="img-fluid" alt=" {{ product.object.name }}">
                    </div>
                    <div class="col-md-2">
                        <strong class="d-block">{{ product.object.name }}</strong>
                        <small class="d-block mb-3">prix unitaire: {{ product.object.pricewt|price }}</small>
                    </div>
                    <div class="col-md-2">
                        <a href="{{ path('app_cart_decrease', {id : product.object.id}) }}" class="btn" >-</a>
                        <span class="badge text-bg-secondary">X{{ product.qty }}</span>
                        <a href="{{ path('app_cart_add', {id : product.object.id}) }}" class="btn" >+</a>

                    </div>
                    <div class="col-md-2">
                        <span class="d-block mb-3">{{ (product.object.pricewt*product.qty)|price }}</span>
                    </div>
                </div>
                {% endfor %}
                <a href="{{ path('app_cart_remove')}}" class="small d-block mt-3 " >Vider le panier.</a>

            </div>
            <div class="col-md-4">
                <div class="bg-light p-3">
                    <div class="d-flex justify-content-between">
                        <span class="fw-bold">Total produits:</span>
                        <span>{{ fullCartQuantity }}</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="fw-bold">Prix total:</span>
                        <span>{{ totalWt }}</span>
                    </div>

                </div>
                <a href="" class="btn btn-success w-100 mt-3" > Passer la commande</a>


            </div>
        </div>
    </div>

{% endblock %}